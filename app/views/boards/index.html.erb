<p id='notice' > <%= notice %> </p>

<h1> boards </h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @board.each do |board| %>
    <tr>
      <td><%= board.title%></td>
      <td><%= board.body%></td>
      <td><%= link_to 'Show', board %></td>
      <td><%= link_to 'Edit', edit_board_path(board) %></td>
      <td><%= link_to 'Destroy', board, method: :delete, date: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>

<br>

